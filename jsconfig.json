{
    "compilerOptions": {
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "@UI/*": ["src/components/UI/*"],
            "@molecules/*": ["src/components/molecules/*"],
            "@sections/*": ["src/components/sections/*"],
            "@layouts/*": ["src/components/layouts/*"],
            "@queries/*": ["src/queries/*"],
            "@lib/*": ["src/lib/*"],
            "@context/*": ["src/context/*"],
            "@styles/*": ["styles/*"],
        }
    },
    "exclude": [
        "node_modules"
    ]
}